<%= render "/layouts/header" %>
<h2 class="text-center"> New List </h2>
<div class="container text-center">
	<%= form_for(@list) do |f| %>
		<%= f.text_field :title, :placeholder => "title", :class => "text col-sm-6 col-md-3 form-control top-buffer" %> <br>
		<%= f.text_area :content, :placeholder => "add items", :class => "text col-sm-6 col-md-3 form-control top-buffer disabled", :id => "listitems", :rows => 10 %> <br>
		<%= f.submit "Create", :class => "btn btn-lg btn-primary top-buffer"%>
	<% end %>
</div>
