<%= render '/layouts/header' %>
<div class="row">
	<div class="container col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
		<h3><%= @list.title %></h3>
		<div class="container bg-info col-sm-12 col-md-12">
			<ul>
				<% @list.content.try(:split, ',').try(:each) do |a|%>
					<li><%= a %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<div class="row-fluid text-center col-sm-12 col-sm-offset-2 col-md-6 col-md-offset-4">
		<%= button_to "Delete", list_path(@list), :method => "delete", :class => "btn btn-md btn-danger top-buffer col-sm-3"%>
		<div class="conatiner col-sm-2"></div>
		<%= button_to "Edit", edit_path(@list), :method => "edit", :class => "btn btn-md btn-warning top-buffer col-sm-3"%>
</div>